.popup-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.popup-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
}

.qrcode {
  width: 450rpx;
  height: 450rpx;
  margin-bottom: 10rpx;
}

.countdown {
  margin-bottom: 20rpx;
}

.close-icon {
  cursor: pointer;
  color: #999;
  display: flex;
  justify-content: flex-end;
}